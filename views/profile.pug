extends index.pug 

block content 

    h1 Profile 
    p Welcome #{user.name},  <strong>#{user.email}</strong>

    form(class="col-md-6")
        div(class="mb-3")
            label(class="form-label") name: 
            input#user-name(type="text", class="form-control", value=user.name)
            button(type="button",class="btn btn-primary", onclick="saveProfile()") save

block scripts 
    script(src="js/profile.js")