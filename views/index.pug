html
  head
    meta(name="viewport",content="width=device-width, initial-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    link(href="css/global.css", rel="stylesheet")
    script(src="https://kit.fontawesome.com/9f5d12bec4.js",crossorigin="anonymous")
    title= title
  body
    ul(class="nav nav-tabs ml-auto w-100 justify-content-end")
      li(class="nav-item dropdown")
        a(class="nav-link dropdown-toggle",data-bs-toggle="dropdown",href="#",role="button",aria-expanded="false")
          i(class="fas fa-user-circle fa-2x")
        ul(class="dropdown-menu")
          li
            a(class="dropdown-item", href="/profile") profile
      
    if !user.emailVerified
      div(class="center-screen")
        button(type="button", class="btn btn-primary", onclick='resendEmailVerification('+ user +')') Resend Email Verification    
    
    div(class="container")
      block content 
    
    script(src="https://code.jquery.com/jquery-3.6.0.min.js",integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=",crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
    script(src="js/index.js")
    
    block scripts